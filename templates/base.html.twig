<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">

    <title>{% block title %}Farm Control{% endblock %}</title>

    {# --- Bootstrap CSS --- #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    {# Área para adicionar CSS extra em outras páginas #}
    {% block stylesheets %}{% endblock %}
</head>
<body>

    {# --- NAVBAR --- #}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container">
            <a class="navbar-brand" href="#">Farm Control</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('farm_index') }}">Fazendas</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('veterinarian_index') }}">Veterinários</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('cow_index') }}">Gado</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} mt-2">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    </div>


    {# --- CONTEÚDO DAS PÁGINAS --- #}
    <div class="container">
        {% block body %}{% endblock %}
    </div>

    {# --- Bootstrap JS --- #}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    {# JS extra das páginas #}
    {% block javascripts %}{% endblock %}
</body>
</html>
